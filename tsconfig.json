{
  "compilerOptions": {
    "target": "es2016",
    // nodeNext: 既支持nodejs(Commonjs)的模块解析方式，也支持es6(ESModule)的模块解析方式
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true, // 不生成文件
    "allowImportingTsExtensions": true, // 允许导入.ts文件
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  // include: 只编译src目录下的文件
  "include": [
    "src"
  ]
}